        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    </head>
    <body>
        <div class="main">
            <h1 style="text-align: center; font-weight: 400;">Stock Search</h1>
            <form action="/" method="post" id="input-form">
                <div class="form">
                    <!-- First button to trigger form submission -->
                    <button class="btn1" type="submit">
                        <img src="/images/search-solid.svg" alt="" style="width: 20px; height: 15px;">
                    </button>
                    <% if(locals.profile) { %>
                        <input type="text" name="stock_id" id="input" required placeholder="<%= profile.ticker %>" onkeyup="this.value = this.value.toUpperCase();" class="bold-placeholder">
                    <% } else { %>
                        <input type="text" name="stock_id" id="input" required placeholder="Enter Stock Ticker Symbol" onkeyup="this.value = this.value.toUpperCase();">
                    <% } %>
                    <button class="btn2" type="reset">
                        <img src="/images/cross.png" alt="" style="width: 15px; height: 15px;">
                    </button>
                </div>
            </form>
            
        </div>

        <div class="data">
            <div class="options">
                <form action="/search" method="post" id="second-form">
                    <button class="opts" name="value" value="profile" id="profile" >Company</button>
                    <button class="opts" name="value" value="summary" id="summary" onclick="handleClick(this)">Stock Summary</button>
                    <button class="opts" name="value" value="charts" id="charts" onclick="handleClick(this)">Charts</button>
                    <button class="opts" name="value" value="news" id="news" onclick="handleClick(this)">Latest News</button>
                    <button class="opts" name="value" value="predict" id="predict" onclick="handleClick(this)">Predict</button>
                </form>
            </div>
            <div id="display">
                